= form_for @publisher do |f|
  = render 'components/error', errors: @publisher.errors

  %table.table.table-striped
    %tr.form-group
      %td= f.label :name, "Name", class: "control-label"
      %td= f.text_field :name, class: "form-control"
    %tr.form-group
      %td= f.label :address, "Adresse", class: "control-label"
      %td= f.text_area :address, class: "form-control"
    %tr
      %td
      %td= f.submit "Speichern", class: "btn btn-success"
      