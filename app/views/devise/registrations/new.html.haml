.panel.slim.panel-default
  .panel-heading
    %h3
      Registrierung
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    %table.table.table-striped
      %tr.form-group
        %td= f.label :email, class: "control-label"
        %td= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
      %tr.form-group
        %td= f.label :family_name, "Nachname", class: "control-label"
        %td= f.text_field :family_name, class: "form-control"
      %tr.form-group
        %td= f.label :given_name, "Vorname", class: "control-label"
        %td= f.text_field :given_name, class: "form-control"
      %tr.form-group
        %td= f.label :address, "Adresse", class: "control-label"
        %td= f.text_area :address, class: "form-control"
      %tr.form-group
        %td
          = f.label :password, class: "control-label"
          - if @minimum_password_length
            %em (min. #{@minimum_password_length} Zeichen)
        %td= f.password_field :password, autocomplete: "new-password", class: "form-control"
      %tr.form-group
        %td= f.label :password_confirmation, class: "control-label"
        %td= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
      %tr
        %td
        %td
          = f.submit "Registrieren", class: "btn btn-success"
          = render "devise/shared/links"

